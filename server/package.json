{
    "name": "graphql-prisma-nodejs-boilerplate",
    "version": "1.0.0",
    "description": "A GraphQL, Prisma, ReactJS, NodeJS project boilerplate with authentication",
    "main": "index.js",
    "scripts": {
        "start": "nodemon src/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "concurrently \"npm run eslint\" \"npm run prettier\"",
        "eslint": "eslint . --ext .js --ext .gql --ext .graphql --ignore-path ../.gitignore",
        "eslint:fix:": "eslint --fix . --ext .js --ext .gql --ext .graphql --ignore-path ../.gitignore",
        "prettier": "prettier \"./**/*.{js,graphql,yml,yaml}\" -l --ignore-path ../.gitignore",
        "prettier:fix": "prettier \"./**/*.{js,graphql,yml,yaml}\" --write --ignore-path ../.gitignore"
    },
    "keywords": [
        "GraphQL",
        "Prisma",
        "NodeJS"
    ],
    "author": "Jerry Ng",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "graphql-shield": "^7.0.11",
        "graphql-yoga": "^1.18.3",
        "ioredis": "^4.14.1",
        "jsonwebtoken": "^8.5.1",
        "prisma-client-lib": "^1.34.10"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "chai": "^4.2.0",
        "concurrently": "^5.1.0",
        "easygraphql-tester": "^5.1.6",
        "eslint": "^6.8.0",
        "eslint-plugin-graphql": "^3.1.1",
        "graphql": "^14.6.0",
        "jest": "^25.1.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
    }
}
