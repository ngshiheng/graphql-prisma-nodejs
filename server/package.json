{
    "name": "graphql-prisma-nodejs-boilerplate",
    "version": "1.0.0",
    "description": "A GraphQL, Prisma, ReactJS, NodeJS project boilerplate with authentication",
    "main": "index.js",
    "scripts": {
        "start": "nodemon src/index.js",
        "test": "mocha src/**/**/*.test.js",
        "test:watch": "mocha src/**/**/*.test.js --watch",
        "lint": "eslint . --ext .js --ext .gql --ext .graphql --ignore-path ../.gitignore",
        "lint:fix": "eslint --fix . --ext js,graphql --ignore-path ../.gitignore"
    },
    "keywords": [
        "GraphQL",
        "Prisma",
        "NodeJS"
    ],
    "author": "Jerry Ng",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "dotenv": "^8.2.0",
        "graphql-shield": "^7.0.7",
        "graphql-yoga": "^1.18.3",
        "jsonwebtoken": "^8.5.1",
        "prisma-client-lib": "^1.34.10"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "eslint-plugin-graphql": "^3.1.1",
        "graphql": "^14.5.8",
        "mocha": "^7.0.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
    }
}
